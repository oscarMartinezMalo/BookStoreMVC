
@model BookRental.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>MembershipType: @Model.Genre</li>
    <li>MembershipType: @Model.DateAdded.ToLongDateString()</li>
    <li>MembershipType: @Model.ReleaseDate.ToLongDateString()</li>
    <li>MembershipType: @Model.NumberInStock</li>
</ul>

