

@model IEnumerable<BookRental.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (!Model.Any())
{
    <p>We don't have any movie yet.</p>
}
else
{
    @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
                    <td>@movie.Genre.Name</td>
                    <td>@Html.ActionLink("Edit Link", "Edit", "Movies", new { id = movie.Id }, null)</td>
                </tr>
            }
        </tbody>
    </table>
}


